{
	"name": "goovplc",
	"version": "0.5.0",
	"description": "a nodejs-based Virtual S7 PLC CPU provide flow data through S7.",
	"type": "module",
	"main": "./index.js",
	"exports": {
		".": "./index.js",
		"./lib": "./lib/index.js",
		"./dist": "./dist/app.js"
	},
	"engines": {
		"node": ">=14.8.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^19.0.0",
		"@rollup/plugin-node-resolve": "^13.0.0",
		"node-snap7": "^1.0.6",
		"rollup": "^2.51.1",
		"rollup-plugin-copy": "^3.4.0"
	},
	"directories": {
		"lib": "lib",
		"test": "test"
	},
	"scripts": {
		"start": "node ./dist/app.js",
		"build": "rollup -c",
		"buildlib": "rollup -c rollup.config.lib.js",
		"watch": "rollup -c -w"
	},
	"keywords": [
		"PLC",
		"S7",
		"SCADA",
		"nodejs"
	],
	"author": "goosy.jo@gmail.com",
